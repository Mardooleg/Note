<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:layout_width="270dp"
    android:layout_height="150dp"
    >

    <TextView
        android:id="@+id/back_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        android:theme="@style/Widget.BottomNavigationView"></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/delete_btn"
        android:layout_alignTop="@+id/delete_btn"
        android:layout_alignEnd="@+id/delete_btn"
        android:layout_alignBottom="@+id/delete_btn"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        ></ImageView>

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/askwhattodo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:paddingLeft="0dp"
        android:paddingRight="20dp"
        android:stateListAnimator="@null"
        android:text="@string/delete"
        android:textAllCaps="false"
        android:textColor="@color/dark"
        android:textSize="17sp"
        android:textStyle="bold"
        android:theme="@style/Widget.BottomNavigationView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/askwhattodo"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:paddingTop="2dp"
        android:layout_marginEnd="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/ask1"
        android:textColor="@color/dark"
        android:textSize="20dp"
        android:textStyle="bold"
        android:theme="@style/Widget.BottomNavigationView"></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit"
        android:layout_alignTop="@+id/edit"
        android:layout_alignEnd="@+id/edit"
        android:layout_alignBottom="@+id/edit"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        ></ImageView>

    <Button
        android:id="@+id/edit"
        android:layout_width="106dp"
        android:layout_height="54dp"
        android:layout_below="@+id/askwhattodo"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="15dp"
        android:background="@android:color/transparent"
        android:paddingRight="36dp"
        android:stateListAnimator="@null"
        android:text="@string/edit"
        android:textAllCaps="false"
        android:textColor="@color/dark"
        android:textSize="17sp"
        android:textStyle="bold"
        android:theme="@style/Widget.BottomNavigationView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/delete_dialog1"

        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/delete_btn"
        android:layout_alignEnd="@+id/delete_btn"
        android:layout_alignBottom="@+id/delete_btn"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/delete"
        app:layout_constraintBottom_toBottomOf="@+id/delete_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/delete_btn"></ImageView>

    <ImageView
        android:id="@+id/edit_dialog1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/edit"
        android:layout_alignEnd="@+id/edit"
        android:layout_alignBottom="@+id/edit"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/ic_iconmonstr_pencil_4"
        app:layout_constraintBottom_toBottomOf="@+id/edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintTop_toTopOf="@+id/edit"
        app:layout_constraintVertical_bias="1.0"></ImageView>

</RelativeLayout>