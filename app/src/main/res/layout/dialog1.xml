<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:layout_width="250dp"
    android:layout_height="200dp"
    >

    <TextView
        android:id="@+id/back_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:theme="@style/Widget.BottomNavigationView"></TextView>

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="130dp"
        android:background="@android:color/transparent"
        android:paddingRight="20dp"
        android:stateListAnimator="@null"
        android:text="Delete"
        android:textAllCaps="false"
        android:textColor="@color/dark"
        android:textSize="17sp"
        android:textStyle="bold"
        android:theme="@style/Widget.BottomNavigationView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        android:stateListAnimator="@null"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/dark"
        android:textSize="15dp"
        android:theme="@style/Widget.BottomNavigationView"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="90dp"
        android:background="@android:color/transparent"
        android:stateListAnimator="@null"

        android:text="Edit"
        android:textAllCaps="false"
        android:textColor="@color/dark"
        android:textSize="17sp"
        android:textStyle="bold"
        android:theme="@style/Widget.BottomNavigationView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/delete_dialog1"

        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/delete_btn"
        android:layout_alignBottom="@+id/delete_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="11dp"
        android:src="@drawable/delete"
        app:layout_constraintBottom_toBottomOf="@+id/delete_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/delete_btn"></ImageView>

    <ImageView
        android:id="@+id/edit_dialog1"
        android:layout_width="25dp"
        android:layout_height="25dp"

        android:layout_alignTop="@+id/edit"
        android:layout_alignBottom="@+id/edit"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/edit"
        android:src="@drawable/ic_iconmonstr_pencil_4"
        app:layout_constraintBottom_toBottomOf="@+id/edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit"
        app:layout_constraintVertical_bias="1.0"></ImageView>

</RelativeLayout>